#!/usr/bin/env bash

function connect_to_tailnet() {
  tailscale up \
    --authkey="${TAILSCALE_AUTH_KEY}" \
    --hostname="$TAILSCALE_HOSTNAME" \
    --advertise-tags=${TAILSCALE_ADVERTISE_TAGS:-} \
    ${TAILSCALE_ADDITIONAL_ARGS:---accept-routes --timeout=15s}

